	cmp.b	#HW_MASKED_TILE,d6
	jeq		2f
	cmp.b	#HW_BRIDGE,d6
	jeq		51f
	cmp.b	#HW_FLYING_JET_1,d6
	jeq		52f
	cmp.b	#HW_FLYING_JET_2,d6
	jeq		53f
