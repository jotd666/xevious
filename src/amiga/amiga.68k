6:
	CLEAR_TILE_NO_MIRROR
	bra.b	1b
	
5:   | y-flip
	tst.b	(a0)+
	beq.b	6f

	FLIPPED_BG_TILE
1:
	lea		(BG_SCREEN_PLANE_SIZE.W,a1),a1
    dbf		d3,5b
